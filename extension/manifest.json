{
  "manifest_version": 3,
  "name": "Newgrounds Gallery Scraper",
  "version": "0.1",
  "description": "Download images from a user's Newgrounds gallery.",
  "permissions": [
    "activeTab",
    "downloads",
    "storage",
    "scripting",
    "cookies"
  ],
  "host_permissions": [
    "https://*.newgrounds.com/*",
    "https://*.ngfiles.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Scrape Gallery"
  },
  "background": {
    "service_worker": "background.js"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  }
}
